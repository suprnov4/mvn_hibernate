<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>MavenHibernate</display-name>
  <welcome-file-list>
    <welcome-file>index</welcome-file>
  </welcome-file-list>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <include-prelude>/taglibs.jsp</include-prelude>
    </jsp-property-group>
  </jsp-config>
  <servlet>
    <servlet-name>accueil</servlet-name>
    <jsp-file>/accueil.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>accueil</servlet-name>
    <url-pattern>/accueil</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>articlesList</servlet-name>
    <servlet-class>com.humanbooster.hibernate.servlets.ArticlesListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>articlesList</servlet-name>
    <url-pattern>/articlesList</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>categoriesList</servlet-name>
    <servlet-class>com.humanbooster.hibernate.servlets.CategoriesListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>categoriesList</servlet-name>
    <url-pattern>/categoriesList</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>articleDetail</servlet-name>
    <servlet-class>com.humanbooster.hibernate.servlets.ArticleDetailServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>articleDetail</servlet-name>
    <url-pattern>/articleDetail</url-pattern>
  </servlet-mapping>
   <servlet>
    <servlet-name>categorieDetail</servlet-name>
    <servlet-class>com.humanbooster.hibernate.servlets.CategorieDetailServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>categorieDetail</servlet-name>
    <url-pattern>/categorieDetail</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>articleCreation</servlet-name>
    <servlet-class>com.humanbooster.hibernate.servlets.ArticleCreationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>articleCreation</servlet-name>
    <url-pattern>/articleCreation</url-pattern>
  </servlet-mapping>
</web-app>